            <stroke android:width="1px" android:color="@color/cpb_grey" />

        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/bg_gray" />

            <stroke android:width="1px" android:color="@color/bg_gray" />

        </shape>
    </item>

</selector>
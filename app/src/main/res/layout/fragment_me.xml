<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/content_me_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/avatar_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/primary"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/avatar_me_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/username_me_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="老吴来了"
                android:textColor="#FFFFFF" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>


        <RelativeLayout
            android:id="@+id/meInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/layout_action_bg_seletor"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="22dp"
                android:drawableLeft="@mipmap/me"
                android:gravity="center_vertical"
                android:text=" 我的信息"
                android:textColor="@color/secondary_text"
                android:textSize="20sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/helpInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/layout_action_bg_seletor"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="22dp"
                android:drawableLeft="@mipmap/info"
                android:gravity="center_vertical"
                android:text=" 我的求助"
                android:textColor="@color/secondary_text"
                android:textSize="20sp" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>

    <RelativeLayout
        android:id="@+id/logout_me_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/layout_action_bg_seletor"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="22dp"
            android:drawableLeft="@mipmap/logout"
            android:gravity="center_vertical"
            android:text=" 退出登陆"
            android:textColor="@color/cpb_red"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>

